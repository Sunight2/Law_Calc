                android:id="@+id/btn_4"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_kalc"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/white"
